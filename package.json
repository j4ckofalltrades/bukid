  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j4ckofalltrades/bukid.git"
  },
  "author": "Jordan Duabe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/j4ckofalltrades/bukid/issues"
  },
  "homepage": "https://bukid.vercel.app",
  "devDependencies": {
    "@types/geojson": "7946.0.8",
    "@types/node": "^17.0.35",
    "@types/topojson": "^3.2.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "maplibre-gl": "^2.1.9",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.6.2",
    "topojson-server": "^3.0.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "vercel": "^24.2.4"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false
  },
  "lint-staged": {
    "*.{geojson,topojson}": "prettier --write data"
  }
