{
  "name": "bukid",
  "version": "1.0.0",
  "description": "Interactive map (data visualization) for mountains in the Philippines.",
  "main": "index.html",
  "scripts": {
    "build": "parcel build index.html -d public --no-source-maps",
    "prepare": "husky install",
    "start": "parcel index.html --open",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j4ckofalltrades/bukid.git"
  },
  "author": "Jordan Duabe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/j4ckofalltrades/bukid/issues"
  },
  "homepage": "https://bukid.vercel.app",
  "devDependencies": {
    "@types/geojson": "7946.0.8",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "maplibre-gl": "^2.1.9",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.6.2",
    "topojson-server": "^3.0.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "vercel": "^24.2.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write src"
    ]
  }
}
