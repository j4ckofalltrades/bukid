{
  "name": "bukid",
  "version": "1.0.0",
  "description": "GeoJSON and TopoJSON data for PH mountains.",
  "main": "index.html",
  "scripts": {
    "build": "parcel build index.html -d public --no-source-maps",
    "prepare": "husky install",
    "start": "parcel index.html --open",
