{
  "name": "bukid",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "version": "1.0.0",
  "description": "Interactive map (data visualization) for mountains in the Philippines.",
  "scripts": {
    "build": "parcel build src/index.html --public-url ./ --no-source-maps",
    "prepare": "husky install",
    "start": "parcel src/index.html --open",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j4ckofalltrades/bukid.git"
  },
  "author": "Jordan Duabe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/j4ckofalltrades/bukid/issues"
  },
  "homepage": "https://bukid.vercel.app",
  "devDependencies": {
    "@parcel/config-default": "^2.7.0",
    "@parcel/transformer-raw": "^2.7.0",
    "@parcel/transformer-typescript-tsc": "^2.7.0",
    "@types/geojson": "7946.0.10",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.4.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "maplibre-gl": "^2.3.0",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": ["tsconfig.json"]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write src"
    ]
  }
}
